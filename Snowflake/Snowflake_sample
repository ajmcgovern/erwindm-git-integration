
CREATE TABLE Cust
(
	C_CUSTKEY NUMBER(38,0) NOT NULL ,
	C_Nam VARCHAR(25) NOT NULL ,
	C_Addr VARCHAR(40) NOT NULL ,
	C_NATIONKEY NUMBER(38,0) NOT NULL ,
	C_Phn VARCHAR(15) NOT NULL ,
	C_ACCTBAL NUMBER(38,0) NOT NULL ,
	C_MKTSEGMENT VARCHAR(10) NOT NULL ,
	C_COMMENT VARCHAR(117) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

CREATE TABLE NATION
(
	N_NATIONKEY NUMBER(38,0) NOT NULL ,
	N_Nam VARCHAR(25) NOT NULL ,
	N_RgnKEY NUMBER(38,0) NOT NULL ,
	N_COMMENT VARCHAR(152) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

CREATE TABLE OrdrS
(
	O_OrdrKEY NUMBER(38,0) NOT NULL ,
	O_CUSTKEY NUMBER(38,0) NOT NULL ,
	O_OrdrStat VARCHAR(1) NOT NULL ,
	O_TOTALPRICE NUMBER(38,0) NOT NULL ,
	O_OrdrDt DATE NOT NULL ,
	O_OrdrPRIORITY VARCHAR(15) NOT NULL ,
	O_CLERK VARCHAR(15) NOT NULL ,
	O_SHIPPRIORITY NUMBER(38,0) NOT NULL ,
	O_COMMENT VARCHAR(79) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

CREATE TABLE PART
(
	P_PARTKEY NUMBER(38,0) NOT NULL ,
	P_Nam VARCHAR(55) NOT NULL ,
	P_MFGR VARCHAR(25) NOT NULL ,
	P_BRAND VARCHAR(10) NOT NULL ,
	P_Typ VARCHAR(25) NOT NULL ,
	P_SIZE NUMBER(38,0) NOT NULL ,
	P_CONTAINER VARCHAR(10) NOT NULL ,
	P_RETAILPRICE NUMBER(38,0) NOT NULL ,
	P_COMMENT VARCHAR(23) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

CREATE TABLE Rgn
(
	R_RgnKEY NUMBER(38,0) NOT NULL ,
	R_Nam VARCHAR(25) NOT NULL ,
	R_COMMENT VARCHAR(152) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

CREATE TABLE SUPPLIER
(
	S_SUPPKEY NUMBER(38,0) NOT NULL ,
	S_Nam VARCHAR(25) NOT NULL ,
	S_Addr VARCHAR(40) NOT NULL ,
	S_NATIONKEY NUMBER(38,0) NOT NULL ,
	S_Phn VARCHAR(15) NOT NULL ,
	S_ACCTBAL NUMBER(38,0) NOT NULL ,
	S_COMMENT VARCHAR(101) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

CREATE TABLE PARTSUPP
(
	PS_PARTKEY NUMBER(38,0) NOT NULL ,
	PS_SUPPKEY NUMBER(38,0) NOT NULL ,
	PS_AVAILQTY NUMBER(38,0) NOT NULL ,
	PS_SUPPLYCOST NUMBER(38,0) NOT NULL ,
	PS_COMMENT VARCHAR(199) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

CREATE TABLE LINEitm
(
	L_OrdrKEY NUMBER(38,0) NOT NULL ,
	L_PARTKEY NUMBER(38,0) NOT NULL ,
	L_SUPPKEY NUMBER(38,0) NOT NULL ,
	L_LINENbr NUMBER(38,0) NOT NULL ,
	L_Qty NUMBER(38,0) NOT NULL ,
	L_EXTENDEDPRICE NUMBER(38,0) NOT NULL ,
	L_Disc NUMBER(38,0) NOT NULL ,
	L_TAX NUMBER(38,0) NOT NULL ,
	L_RETURNFLAG VARCHAR(1) NOT NULL ,
	L_LINEStat VARCHAR(1) NOT NULL ,
	L_SHIPDt DATE NOT NULL ,
	L_COMMITDt DATE NOT NULL ,
	L_RECEIPTDt DATE NOT NULL ,
	L_SHIPINSTRUCT VARCHAR(25) NOT NULL ,
	L_SHIPMODE VARCHAR(10) NOT NULL ,
	L_COMMENT VARCHAR(44) NOT NULL 
)
DATA_RETENTION_TIME_IN_DAYS = 1;

ALTER TABLE Cust
	ADD CONSTRAINT PK_CUSTOMER PRIMARY KEY (C_CUSTKEY);

ALTER TABLE NATION
	ADD CONSTRAINT PK_NATION PRIMARY KEY (N_NATIONKEY);

ALTER TABLE OrdrS
	ADD CONSTRAINT PK_ORDERS PRIMARY KEY (O_ORDERKEY);

ALTER TABLE PART
	ADD CONSTRAINT PK_PART PRIMARY KEY (P_PARTKEY);

ALTER TABLE Rgn
	ADD CONSTRAINT PK_REGION PRIMARY KEY (R_REGIONKEY);

ALTER TABLE SUPPLIER
	ADD CONSTRAINT PK_SUPPLIER PRIMARY KEY (S_SUPPKEY);

ALTER TABLE PARTSUPP
	ADD CONSTRAINT PK_PARTSUPP PRIMARY KEY (PS_PARTKEY, PS_SUPPKEY);

ALTER TABLE LINEitm
	ADD CONSTRAINT PK_LINEITEM PRIMARY KEY (L_LINENUMBER);

ALTER TABLE Cust
	ADD CONSTRAINT FK_NATION_Cust FOREIGN KEY (C_NATIONKEY) REFERENCES NATION (N_NATIONKEY);

ALTER TABLE NATION
	ADD CONSTRAINT FK_Rgn_NATION FOREIGN KEY (N_RgnKEY) REFERENCES Rgn (R_RgnKEY);

ALTER TABLE OrdrS
	ADD CONSTRAINT FK_Cust_OrdrS FOREIGN KEY (O_CUSTKEY) REFERENCES Cust (C_CUSTKEY);

ALTER TABLE SUPPLIER
	ADD CONSTRAINT FK_NATION_SUPPLIER FOREIGN KEY (S_NATIONKEY) REFERENCES NATION (N_NATIONKEY);

ALTER TABLE PARTSUPP
	ADD CONSTRAINT FK_PART_PARTSUPP FOREIGN KEY (PS_PARTKEY) REFERENCES PART (P_PARTKEY);

ALTER TABLE PARTSUPP
	ADD CONSTRAINT FK_SUPPLIER_PARTSUPP FOREIGN KEY (PS_SUPPKEY) REFERENCES SUPPLIER (S_SUPPKEY);

ALTER TABLE LINEitm
	ADD CONSTRAINT FK_OrdrS_LINEitm FOREIGN KEY (L_OrdrKEY) REFERENCES OrdrS (O_OrdrKEY);

ALTER TABLE LINEitm
	ADD CONSTRAINT FK_PART_LINEitm FOREIGN KEY (L_PARTKEY) REFERENCES PART (P_PARTKEY);

ALTER TABLE LINEitm
	ADD CONSTRAINT FK_SUPPLIER_LINEitm FOREIGN KEY (L_SUPPKEY) REFERENCES SUPPLIER (S_SUPPKEY);
